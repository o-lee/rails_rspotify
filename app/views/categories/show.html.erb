<!-- app/views/category/show.html.erb -->

<body>
  <div id="header">
    <button onclick="alert('Hello')" type="button">login</button>
    <button onclick="alert('Hello')" type="button">sign-up</button>
  </div>
  <div id="content">
    <table id="playlist">
      <thead>
        <tr>
          <th class="<%= ("hilite" if @sort_column == "title") %>">
            <%= link_to "Name", projects_path(:sort_by=>"title"), :id=> "title_header" %>
          </th>
          <th class="<%= ("hilite" if @sort_column == "due_date") %>">
            <%= link_to "Artist", projects_path(:sort_by=>"due_date"), :id=> "due_date_header" %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td>
              <%= song.name %>
            </td>
            <td>
              <%= song.artists[0].name %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tbody>
        <% puts @categories %>
      </tbody>
    </table>
  </div>
</body>