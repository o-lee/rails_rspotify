<!-- app/views/category/show.html.erb -->

<body>
  <div class="page-wrapper"id="content">
    <div class="main supporting" role="main">
      <div class="playlist">
        <h2><%= @category %></h2>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Artist</th>
              </tr>
          </thead>
          <tbody>
            <% @songs.each do |song| %>
              <tr>
                <td>
                  <%= song.name %>
                </td>
                <td>
                  <%= song.artists[0].name %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>

      <footer>
          <a href="https://github.com/UCCS-CS3300-Spring2016/Group3" class="zen-github">Home</a>
        <a href="http://https://www.spotify.com/" title="Spotify" class="zen-validate-html">Spotify</a>
        <a href="https://github.com/UCCS-CS3300-Spring2016/Group3" class="zen-github">GitHub</a>
      </footer>
    </div>

    <aside class="sidebar" role="complementary">
      <div class="wrapper">

        <div class="design-selection" id="design-selection">

          <nav role="navigation">
            <ul>
            <li><h3>Group By:</h3></li>
            <li>
              <a href="/221/" class="design-name">Album</a>
            </li>         
            <li>
              <a href="/220/" class="design-name">Genre</a> 
            </li>         
            <li>
              <a href="/219/" class="design-name">None</a>
            </li> 
            </ul>
          </nav>
        </div>

        
    </aside>
  </div>
</body>